# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration (Supabase)
DATABASE_URL="postgresql://postgres:[password]@[host]:5432/postgres"
DB_CA_CERT=""  # Leave empty for Supabase Cloud, or provide CA certificate path

# Job Queue (Redis) Configuration  
REDIS_URL="redis://localhost:6379"

# Allora Network Configuration
ALLORA_API_URLS=""
ALLORA_RPC_URLS="https://rpc.allora.network"
CHAIN_ID="allora-testnet-1"
AVERAGE_BLOCK_TIME_SECONDS=5

# Secrets Management Configuration
TREASURY_MNEMONIC_SECRET_KEY="treasury_mnemonic"

# HashiCorp Vault Configuration (Production Only)
# Generate new secure tokens - NEVER use the example tokens below
VAULT_ADDR="http://127.0.0.1:8200"
VAULT_TOKEN=""  # Generate with: vault token create -policy=mcp-policy
VAULT_NAMESPACE=""  # Optional namespace for multi-tenancy
VAULT_SECRET_PATH="secret/data/mcp"

# Clerk Authentication Configuration
# Get these from your Clerk dashboard at https://clerk.com
VITE_CLERK_PUBLISHABLE_KEY="pk_test_your_publishable_key_here"
CLERK_SECRET_KEY="sk_test_your_secret_key_here"

# Treasury Mnemonic (Development Only - use Vault in production)
# TREASURY_MNEMONIC="your twelve word mnemonic phrase goes here"

# CORS Configuration (Production)
ALLOWED_ORIGINS="http://localhost:3000"

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # Max requests per window
